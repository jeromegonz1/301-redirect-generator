# Fire Snake 301 - Variables d'environnement
# Copier ce fichier vers .env et remplir avec vos valeurs réelles

# OpenAI Configuration (OBLIGATOIRE)
OPENAI_API_KEY=your-openai-api-key-here

# Domain Configuration (optionnel)
DOMAIN_NAME=fire-snake-301.fr

# Streamlit Configuration (optionnel - valeurs par défaut OK)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Security (production uniquement)
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true

# Performance
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=100
STREAMLIT_SERVER_MAX_MESSAGE_SIZE=100